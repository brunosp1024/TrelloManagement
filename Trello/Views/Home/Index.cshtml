    }

    .card:hover .card-controls {
        display: inline-block;
    }

    .card-edit {
        display: block;
        box-sizing: border-box;
        position: relative;
        width: 100%;
        min-height: 4em;
        padding: 1em;
        border-radius: 3px;
        margin-bottom: .5em;
        background: #fff;
        font-size: 1em;
        border: none;
    }

    .card-edit-controls {
        margin-bottom: .5em;
    }

    .pull-right {
        float: right;
    }

    .card {
        box-sizing: border-box;
        position: relative;
        width: 100%;
        min-height: 4em;
        padding: 1em;
